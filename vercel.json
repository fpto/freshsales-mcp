{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Accept, Authorization, Mcp-Session-Id"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Mcp-Session-Id"
        }
      ]
    }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@3.2.0",
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/mcp.js"
    },
    {
      "source": "/.well-known/oauth-authorization-server",
      "destination": "/api/oauth-metadata.js"
    },
    {
      "source": "/.well-known/oauth-protected-resource",
      "destination": "/api/oauth-protected-resource.js"
    },
    {
      "source": "/oauth/authorize",
      "destination": "/api/oauth-authorize.js"
    },
    {
      "source": "/oauth/token",
      "destination": "/api/oauth-token.js"
    },
    {
      "source": "/oauth/register",
      "destination": "/api/oauth-register.js"
    }
  ]
}
